.orders{
    display: flex;
    flex-direction: column;
}

.container{
    background: rgb(255, 255, 255);
    height: 84vh;
}

page{
    display: flex;
    flex-direction: column;
    height: 100%;
    background: rgb(241,242,246);
    position: fixed;
}
.navbar{
    flex: none;
    display: flex;
    background: #fff;
}
.navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 80rpx;
}
.navbar .item.active{
    color: #F98F2E;
}
.navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #F98F2E;
}

.good-box{
    display: flex;
    flex-direction: row;
    align-items: center;
    /* border-bottom: 2rpx solid #dbd7d7; */
    padding: 10rpx 0;
    border-radius: 30rpx;
    background: white;
    margin: 10rpx 10rpx 30rpx 10rpx;
    box-shadow: #d6d6d6 0px 0px 100px 5px;
    border: 2rpx solid rgb(214, 213, 213);
}

.choose-img{
    margin-left: 10rpx;
    width: 50rpx;
    height: 50rpx;
}

.good-img{
    width: 170rpx;
    height: 170rpx;
    border-radius: 20rpx;
    margin-left: 20rpx;
}

.good-right{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    height: 100%;
}
.detail{
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #7E8B92;
    /* 防止文字溢出 */
    width: 330rpx;
    height: 40rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.choose-box{
    display: flex;
    flex-direction: row;
    width: 400rpx;
    justify-content: space-between;
    align-items: center;
    margin: 0rpx 0;
    position: relative;
    top: 15rpx;
}

.choose-num-box{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.choose-num-box image{
    width: 40rpx;
    height: 40rpx;
}

.price{
    font-size: 34rpx;
    color: #FF6E40;
}

.good-num{
    margin: 0 10rpx;
}

.cartCard{
    height: 120rpx;
    width: 100%;
    bottom: 0;
    display: flex;
    background: white;
    border-top: 1rpx solid #bbb8b8;
    /* 设置上内 为25rpx来对齐 */
    padding-top: 5rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
}
.wrapBlock{
    display: flex;
    height: 100%;
    width: 100%;
    align-items: center;
    justify-content: space-between;
}
.cartCard image{
    width: 50rpx;
    height: 50rpx;
    margin-left: 20rpx;
}
.allChoose{
    color: #999;
    margin-left: 10rpx;
    font-size: 30rpx;
}
.total-font{
    font-size: 28rpx;
    margin-left: 100rpx;
    /* width: 200rpx; */
    height: 100%;
    line-height: 110rpx;
    font-size: 26rpx;
    color: #646363;
}
.total-price{
    font-size: 36rpx;
    margin-left: 20rpx;
    height: 100%;
    line-height: 110rpx;
    color: #f37335;
}
/* 结算按钮 */
.settlement{
    width: 200rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    border-radius: 50rpx;
    background: linear-gradient(to right,#F37335,#f37335);
    margin-left: 20rpx;
    margin-right: 15rpx;
    color: white;
}

/* 购物车列表为空时显示的图片 */
.empty image{
    width: 100%;
}