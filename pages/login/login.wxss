/* pages/login/login.wxss */
.container{
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    background: rgb(241,242,246);
}

.info{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 120rpx;
    line-height: 100rpx;
    font-size:40rpx;
    margin-top: 20rpx;
}
.avatar-wrapper{
    border-radius: 50%;
    width: 110rpx;
    height: 110rpx;
    margin-left: 10rpx;
}
.info image{
    border-radius: 50%;
    width: 110rpx;
    height: 110rpx;
}

.info text{
    margin-left: 30rpx;
}

image {
    width: 70rpx;
    height: 70rpx;
    margin-left: 25rpx;
}

.func{
    display: flex;
    flex-direction: column;
    height: 300rpx;
    background: white;
    margin-top: 60rpx;
    padding-top: 30rpx;
    padding-left: 20rpx;
    justify-content: center;
    border-radius: 20rpx;
    border: 2rpx solid #ebebeb;
}

.title{
    font-size: 35rpx;
    color: rgb(50, 53, 54);
    width: 96%;
    height: auto;
    padding: 20rpx 0;
    border-bottom: 2rpx solid #ebebeb;
}

.mybox{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 180rpx;
    margin-top: 30rpx;
    border-radius: 20rpx;
}

.entity{
    width: 100%;
    justify-content: center;
}

.myfont{
    font-size: 30rpx;
    color: black;
    margin-top: 20rpx;
}